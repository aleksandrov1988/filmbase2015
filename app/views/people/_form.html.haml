= form_for @person do |f|
  - if @person.errors.any?
    #error_explanation
      %h2= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:"
      %ul
        - @person.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :origin_name
    = f.text_field :origin_name
  .field
    = f.label :sex
    = f.text_field :sex
  .field
    = f.label :birthday
    = f.date_select :birthday
  .field
    = f.label :avatar
    = f.text_field :avatar
  .actions
    = f.submit 'Save'
